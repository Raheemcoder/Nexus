@model Ideation.Models.Reformulation

@{
    ViewBag.Title = "EditReformulation";
    Layout = "~/Views/Shared/N_PB_Layout.cshtml";
    var userName = Context.Session.GetString("UserName");
    var hub = Context.Session.GetString("Hub");

    var statusName = Model.statusName.ToLower() == "under exploration" ? "Extended Fine Screening Review" : Model.statusName;
}

@*pagename, preview and back*@
<section>
    <div class="">
        <div class="-m_title_ ">
            <h4>
                <span>
                    <a href="@Url.Content("~/Landing/Index")">Home/ </a>
                </span>
                <span>
                    <a href="@Url.Content("~/ProjectBrief/ProjectBrief")">ProjectBrief/ </a>
                </span>
                Reformulation - @statusName
            </h4>
        </div>

        <div class="note_savedata_">
            @if ((Model.StatusId == "1" || Model.StatusId == "8" || Model.StatusId == "11") && Model.ViewStatus != "View")
            {
                <span>
                    (Note: The Project Brief information will be auto saved for every 5 minutes . Please ensure that Project Name is entered to Auto save the data.)
                </span>
            }
        </div>


        @if (Model.ViewStatus != "View")
        {
        <div class="right_top">
            <ul>
                    <li class="preview" id="Preview_Modal"><i class="fa fa-eye"></i> Preview</li>
                    <li><a href="@Url.Content("~/ProjectBrief/ProjectBrief")"><i class="fas fa-arrow-left"></i> Back</a></li>
            </ul>
        </div>
        }
    </div>
</section>

