@model Ideation.Models.MMProject
@{
    ViewBag.Title = "ProjectMaster";
    Layout = "~/Views/Shared/_MMLayout.cshtml";
}
<div id="message">
    @if (TempData["Message"] != null)
    {
        <div class="alert @TempData["MessageStyle"].ToString() alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true" class="l_err_msg_close">&times;</span>
            </button>
            @TempData["Message"].ToString()
        </div>
    }
</div>
<div class="card-box">
    <div class="row">
        <div class="col-md-12">
            <div class="page-title" style="display:flex;justify-content:space-between;">
                <h4 class="-mb-3">Project Master</h4>
            </div>
            <div class="row mb-4">


                <div class="col-md-3">
                    <div class="">
                        <div class="">
                            <label class="mt-2">Division<span class="color-red"></span></label>
                        </div>
                        <div class="">
                            @Html.ListBoxFor(model => model.Project, Model.DivisionsList ?? new List
                            <SelectListItem>
                            (),
                            new { @class = "form-control data-multiselect", @multiple = "multiple",
                            @id="Divisions" })

                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="">
                        <div class="">
                            <label class="mt-2">Status<span class="color-red"></span></label>
                        </div>
                        <div class="">
                            @Html.ListBoxFor(model => model.Status, Model.ProjectStatusList ?? new List
                            <SelectListItem>
                            (),
                            new { @class = "form-control data-multiselect", @multiple = "multiple",
                            @id="Status" })

                        </div>
                    </div>
                </div>

                <div class="col-md-3 d-flex flex-column">
                    <div class="mt-auto">
                        <button type="button" class="btn btn_search" id="projectsFilter" style="margin-top:5vh;"><i class="fa fa-search" aria-hidden="true"></i></button>
                    </div>
                </div>
                <div class="col-md-3 d-flex flex-column">
                    <div class="mt-auto ml-auto">
                        <button type="button" class="btn-add mt-1 px-4" id="ProjectMasterExport">Export To Excel</button>
                    </div>
                </div>
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex mt-3 ml-2">
                         <span class="details_icons"><label class="btn-icon -edit"><i class="fas fa-pen" aria-hidden="true"></i></label> Edit</span>
                    </div>
                </div>
            </div>



            <div class="m-table__main mmproject">
                <div class="m-table__responsive -virtual-scroll m-table__responsivemaster">
                    <div>
                        <table id="jqgrid" class="table table-bordered"></table>
                        <div id="pager"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
