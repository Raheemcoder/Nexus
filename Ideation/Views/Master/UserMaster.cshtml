@model Ideation.Models.User
@{
    ViewBag.Title = "UserMaster";
    Layout = "~/Views/Shared/_EPPMLayout.cshtml";
}
<div id="message" class="m-login__erromsg">
    @if (TempData["Message"] != null)
    {
        <div class="alert @TempData["MessageClass"].ToString() alert-dismissible" role="alert" id="message_alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true" class="l_err_msg_close">&times;</span>
            </button>
            @TempData["Message"].ToString()
        </div>
    }
</div>
<div class="card-box">
    <div class="row d-flex align-items-center">
        <div class="col-md-7">
            <div class="page-title left_title">
                <h4 class="-mb-3">User Master</h4>
            </div>

        </div>
        <div class="col-md-5 page-add__button mb-3">
            <button type="button" class="btn btn-xs btn-info c-btn" id="Adduser" data-toggle="modal" data-target="#addModal">Add New User</button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="m-table__main">
                <div class="m-table__responsive -virtual-scroll m-table__responsivemaster">
                    <table id="jqgrid" class="table table-bordered"></table>
                    <div id="pager"></div>
                </div>
            </div>
        </div>
    </div>
    </div>

    <div id="addModal" class="modal fade m-modal -table-modal" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-xl" style="MARGIN-TOP: 75PX;">
            <div class="modal-content">
            <div class="modal-header -bg-green">
                    <div class="">
                        <h4 class="modal-title" id="element"> Add User Details</h4>
                    </div>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">
                            <i class="fas fa-times"></i>
                        </span>
                    </button>
                </div>
            <div class="modal-body milestone">

                    <div class="m-modal__container">
                        <div class="form-horizontal m-form">
                            <div class="m-form__container">
                                @*@using (Html.BeginForm("AddUser", "Master", FormMethod.Post, new { @class = "m-login-form m-form__form", @id = "UserMasterForm" }))
                                    {*@
                                @*@Html.AntiForgeryToken()*@
                                @*<form class="m-form__form">*@
                                <div class="row">
                                    @Html.HiddenFor(m => m.UserId, new { @class = "form-control" })
                                    @*@Html.ValidationMessageFor(m => m.UserName, null, new { @class = "text-danger" })*@
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="control-label">Username <span class="color-red">*</span></label>
                                            <div class="">
                                                @*<input type="text" class="form-control">*@
                                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "text-danger valmsg" })
                                            </div>
                                        </div>
                                        </div>
                                        <div class="col-md-4">
                                        <div class="form-group">
                                                <label class="control-label">Email ID <span class="color-red">*</span></label>
                                            <div class="">
                                                @*<input type="text" class="form-control">*@
                                                @Html.TextBoxFor(m => m.EmailId, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.EmailId, null, new { @class = "text-danger valmsg" })
                                            </div>
                                        </div>
                                        </div>
                                        <div class="col-md-4">
                                        <div class="form-group">
                                                <label class="control-label">Designation <span class="color-red">*</span></label>
                                            <div class="">
                                                @*<input type="text" class="form-control">*@
                                                @Html.DropDownListFor(model => model.RoleId, Model.RoleList, "-- Select --", new { @class = "form-control selected_Role" })
                                                @Html.ValidationMessageFor(m => m.RoleId, null, new { @class = "text-danger valmsg" })
                                            </div>
                                        </div>
                                        </div>
                                        <div class="col-md-4">
                                        <div class="form-group ">
                                                <label class="control-label">Status <span class="color-red">*</span></label>
                                            <div class="">
                                                <div class="radio-list m-radio__list">
                                                    <div class="radio-inline p-0">
                                                        <div class="radio radio-info">
                                                            @*<input type="radio" name="statusgroup" id="radio1" checked>*@
                                                            @Html.RadioButtonFor(model => model.IsActive, true, new { @class = "Active" })
                                                            <label for="radio1">Active</label>
                                                        </div>
                                                        <div class="radio radio-info">
                                                            @*<input type="radio" name="statusgroup" id="radio2">*@
                                                            @Html.RadioButtonFor(model => model.IsActive, false, new { @class = "InActive" })
                                                            <label for="radio2">InActive</label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12 m-form__page--buttons">
                                        @*<button type="button" class="btn btn-xs btn-warning c-btn -cancel" data-dismiss="modal">Cancel</button>*@
                                        @*<button type="submit" class="btn btn-xs btn-info c-btn -sudmit" id="userAdd">Submit</button>
                                        <a href="@Url.Content("~/Master/UserMaster")" class="btn btn-xs btn-warning c-btn -cancel" data-dismiss="modal">Cancel</a>*@
                                    <div class="save_buttons float-right text-right">
                                        <button type="submit" class="btn-add" id="userAdd"> Save</button>
                                        <button type="button" class="btn-cnl" id="" data-dismiss="modal"> Back</button>
                                    </div>
                                    </div>
                                </div>


                                @*</form>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src='@Url.Content(String.Concat("~/js/Master/UserMaster.js?v=",System.Configuration.ConfigurationManager.AppSettings["VersionNumber"]))'></script>




