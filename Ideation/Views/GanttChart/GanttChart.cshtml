@model Ideation.Models.PMUMapping
@{
    ViewBag.Title = "GanttChart";
    Layout = "~/Views/Shared/_EPPMLayout.cshtml";
}

<div class="card-box">
<div class="row">
    <div class="col-md-7">
        <div class="page-title">
            <h4 class="-mb-3">Gantt Chart</h4>
        </div>

    </div>
</div>
<div class="m-form -filter-form">
            <div class="m-form__container">
                <div class="m-form__List">
                    <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">Project Versions</label>
                                    @Html.DropDownListFor(model => model.VersionId, new SelectList(Model.ProjectVersionList,"Value","Text"), "-- Select --", new { @class = "form-control  projectascDrop" })
                                    @Html.ValidationMessageFor(m => m.ProjectVersionList, null, new { @class = "text-danger" })
                                    <span class="text-danger projectId_error"></span>

                                </div>
                            </div>
                      

                        <div class="col-md-2">
                            <button type="button" id="Search" class="btn btn-xs btn-info c-btn Search_btn">Search</button>
                        </div>
                       
                    </div>
                </div>
            </div>
    </div>
@if(Context.Session.GetString("projectName")!= null)
{
    <input type="hidden" id="selectedProjectName" value="Context.Session.GetString("projectName")" />
    <input type="hidden" id="selectedProjectId" value="Context.Session.GetString("projectId")" />
}


