    <script>
        $(document).ready(function () {
            $(document)
                .ajaxStart(function () {
                    $('#loader').show();
                    $("#loader").css("visibility", "visible");
                })
                .ajaxStop(function () {
                    $('#loader').hide();
                    $("#loader").css("visibility", "hidden");
                })
                .ajaxComplete(function () {
                    $('#loader').hide();
                    $("#loader").css("visibility", "hidden");
                });
            $('#loader').hide();
        });
        window.onload = function () {
            $("#loader").css("visibility", "hidden");
            $('#loader').hide();
        }
    </script>

