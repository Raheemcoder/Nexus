        };
    </script>

    <script>

        const confirm = function (msg, func1, func2) {

            $('#ConfirmDialogMessage').empty().html(msg);
            $('#ConfirmDialog').modal('show');

            if (func1) {

                $("#ConfirmOKbutton").unbind("click");
                $('#ConfirmOKbutton').on("click", function () {
