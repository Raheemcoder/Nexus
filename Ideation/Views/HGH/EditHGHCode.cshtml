@model Ideation.Models.HGH
@{
    ViewData["Title"] = "HGH Code";
    Layout = "/Views/Shared/HGHLayout.cshtml";
}

<style>
    .heading_hgh h3 {
        font-size: 14px;
        font-weight: 600;
        background: #f5f5f5;
        padding: 5px;
        margin: 0px;
    }

    .ui-state-hover a {
        color: #000
    }

    .link_color a {
        color: blue !important;
    }

    .link_color:hover a {
        color: #000 !important;
    }

    .details_list {
        border: 1px solid #dedede;
        float: left;
        width: 100%;
        padding: 5px;
    }

        .details_list .form-group {
            margin: 0px;
        }

        .details_list .col-width1 {
            width: 110px;
            float: left;
        }

        .details_list .col-width2 {
            float: left;
        }

        .details_list .col-width3 {
            float: left;
        }

    .resize-input {
        width: 300px;
    }
        .resize-input::placeholder {
            color: #8d8d8d !important;
        }
</style>
<section>
    @Html.HiddenFor(model => model.LoginId)
    @Html.HiddenFor(model => model.Role)
    @Html.HiddenFor(model => model.ProjectValue)
    @Html.HiddenFor(model => model.HGHId)
    @Html.HiddenFor(model => model.MProjectId)
    @Html.HiddenFor(model => model.StatusId)

</section>
<section>
    <div class="">
        <div class="-m_title_ ">
            <h4><span><a href="@Url.Content("~/Landing/Index")">Home/ </a></span> HGH Code</h4>
        </div>
    </div>
</section>
<section>
    <div class="prototype_filter">
        <div class="d-flex justify-content-between mb-1 align-items-center">
            <div class="d-flex">
                <div class="col-width3">
                    <div class="form-group">
                        <label for="" class="control-label">Project Id</label><span class="text-danger"> *</span>
                        <input type="text" class="form-control" placeholder="" id="ProjectId" data-projectid>
                        <span class="text-danger hide" Id="E_ProjectId">Please select project id</span>
                        <span class="text-danger hide select-from-list">Please select Project from the list</span>
                        <span class="text-danger hide already-selected">Project has been already selected</span>
                        <span class="text-danger hide not-valid">Please select a valid project</span>
                    </div>
                </div>
                <div class="col-width1 mt-3">
                    <button class="btn btn-refresh" title="refresh" id="refreshBtn" type="button">
                        <i class="fas fa-sync-alt"></i>
                    </button>
                </div>
            </div>
            <div class="d-flex align-items-center">
                <div class=" mr-2">
                    <div class="form-group">
                        <label class="control-label">HGH Code</label><span class="text-danger"> *</span>
                        <input type="text" class="form-control resize-input" placeholder="AAAA-000000" id="HGHCodeValue" value="" maxlength="300">
                        <span class="hide text-danger" id="E_HGHCodeValue">please enter HGH code</span>
                    </div>
                </div>
                <button type="button" id="btnSave" class="btn btn-draft mr-2">Save</button>
                <button type="button" id="btnSubmit" class="btn btn-draft mr-2">Save & Confirm</button>
                <a href="@Url.Content("~/HGH/HGHCodeList")"><i class="fas fa-arrow-left"></i> Back</a>
            </div>
        </div>
    </div>
</section>
<section>
    <div class="animate__animated2 slideInUp mt-1 mb-3 HideForNew hide">
        <div class="">
            <div class="">
                <div class="row">
                    <div class="col-md-12 heading_hgh">
                        <h3>Project Details </h3>
                    </div>
                    <div class="">
                        <div class="details_list">
                            <div class="col-width1">
                                <div class="form-group">
                                    <label class="control-label">
                                        Project Id
                                    </label>
                                    <div>
                                        <b class="ProjectDetails_ProjectId"></b>
                                    </div>
                                </div>
                            </div>
                            <div class="col-width3">
                                <div class="form-group">
                                    <label class="control-label">
                                        Project Name
                                    </label>
                                    <div>
                                        <b class="ProjectDetails_ProjectName"></b>
                                    </div>
                                </div>
                            </div>
                            <div class="col-width1">
                                <div class="form-group">
                                    <label class="control-label">
                                        Bucket
                                    </label>
                                    <div>
                                        <b class="ProjectDetails_Bucket"></b>
                                    </div>
                                </div>
                            </div>
                            <div class="col-width2">
                                <div class="form-group">
                                    <label class="control-label">
                                        HUB
                                    </label>
                                    <div>
                                        <b class="ProjectDetails_Hub"></b>
                                    </div>
                                </div>
                            </div>
                            <div class="col-width1">
                                <div class="form-group">
                                    <label class="control-label">
                                        Start Date
                                    </label>
                                    <div>
                                        <b class="ProjectDetails_StartDate"></b>
                                    </div>
                                </div>
                            </div>
                            <div class="col-width1">
                                <div class="form-group">
                                    <label class="control-label">
                                        End Date
                                    </label>
                                    <div>
                                        <b class="ProjectDetails_EndDate"></b>
                                    </div>
                                </div>
                            </div>
                            <div class="col-width1">
                                <div class="form-group">
                                    <label class="control-label">
                                        Created Date
                                    </label>
                                    <div>
                                        <b class="ProjectDetails_CreatedDate"></b>
                                    </div>
                                </div>
                            </div>
                            <div class="col-width1">
                                <div class="form-group">
                                    <label class="control-label">
                                        Created By
                                    </label>
                                    <div>
                                        <b class="ProjectDetails_CreatedBy"></b>
                                    </div>
                                </div>
                            </div>
                            <div class="col-width1">
                                <div class="form-group">
                                    <label class="control-label">
                                        Item Type
                                    </label>
                                    <div>
                                        <b class="ProjectDetails_ItemType"></b>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="animate__animated2 slideInUp mt-1 mb-3 HideForNew hide">
        <div class="">
            <div class="">
                <div class="col-md-12 p-0">
                    <div class="col-md-12 heading_hgh p-0">
                        <h3>Project Brief Details</h3>
                    </div>
                    <div class="details_list">
                        <div class="col-width2">
                            <div class="form-group">
                                <label class="control-label">
                                    Project Brief ID
                                </label>
                                <div>
                                    <a href="#" class="GetProjectBriefView"><b class="ProjectBriefId"></b></a>
                                </div>
                            </div>
                        </div>
                        <div class="col-width2">
                            <div class="form-group">
                                <label class="control-label">
                                    Workflow
                                </label>
                                <div>
                                    <span class="GetBriefHistory"><i class="fas fa-info-circle"></i></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-width3">
                            <div class="form-group">
                                <label class="control-label">
                                    Document
                                </label>
                                <div>
                                    <a href="#" class="GetProjectBriefPDF"><i class="fas fa-file-pdf"></i> <b>Download</b></a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="animate__animated2 slideInUp mt-3 width_100 HideForNew hide">
        <div class="">
            <div class="">
                <div class="row">
                    <div class="col-md-12 heading_hgh">
                        <h3>Business Info</h3>
                    </div>
                    <div class="m-table__main grid_height">
                        <div class="m-table__responsive -virtual-scroll">
                            <table id="BusinessValue" class="table table-bordered"></table>
                            <div id="pager_BusinessValue"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="PDFNPD" hidden></div>
<div class="PIDraft" hidden></div>
<div class="ReformulationDraft" hidden></div>
<div class="Header" hidden></div>

<div class="modal fade hd" id="PrototypeHistory" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header -bg-green">
                <h4 class="modal-title" id="exampleModalLabel">LifeCycle History</h4>
                <button type="button" class="close" data-bs-dismiss="modal"><span>&times;</span></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="approve_reject">
                        <div class="list_status">
                            <ul>
                                <span id="AddLi"></span>
                            </ul>
                        </div>
                    </div>
                    <div class="panel panel-primary mt-2 mdp">
                        <div class="id_tbl approval_history1 new_initiation">
                            <table id="ViewApprovalHistory" class="table table-bordered"></table>
                            <div id="pager_ViewApprovalHistory"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="ApproveModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-xs upload">
        <div class="modal-content">
            <div class="modal-header -bg-green">
                <h4 class="modal-title modaltitle" id="ModalLabel"></h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="modalmsg"></p>
                <div class="form-group hideforSave">
                    <label class="control-label">
                        Remarks
                    </label><span class="color-red">*</span>
                    @Html.TextAreaFor(model => model.Remarks, new { @class = "form-control F_Value ApprovalRemarks", @rows = "2", @spellcheck = "false", id = "ApprovalRemarks" })
                    <span id="E_ApprovalRemarks" class="color-red Error_closeModal" style="display:none">Please enter the remarks</span>
                </div>
                <div class="text-right mt-2">
                    <button type="button" class="btn btn-success" id="ByClick_OK" data-title="Ok"> Ok</button>
                    <button type="button" class="btn btn-cancel" data-bs-dismiss="modal" data-title="Cancel"> Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="ConfoModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-xs upload">
        <div class="modal-content">
            <div class="modal-header -bg-green">
                <h4 class="modal-title modaltitle" id="Confirmation"></h4>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="ConfoMsg"></p>
                <div class="text-right mt-2">
                    <button type="button" class="btn btn-success" id="Click_ConfoOk" data-dismiss="modal" data-title="Ok"> Ok</button>
                    <button type="button" class="btn btn-cancel" id="Click_ConfoCancel" data-dismiss="modal" data-title="Cancel"> Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="@Url.Content("~/js/hgh/EditHGHCode.js")" asp-append-version="true"></script>
