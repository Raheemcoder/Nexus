@model Ideation.Models.FoodSupplementPDF
@{
    Layout = null;
}
<html>

<head>
    <link href="https://leap.himalayawellness.com/Logo_Font/css/PDFStyle.css" rel="stylesheet">
    <style>
        .him_logo {
            float: right;
            width: 100%;
            text-align: right
        }

        table.report-container tr td, table.report-container tr th {
            page-break-inside: avoid;
            word-wrap: anywhere;
            margin: 4px 0 4px 0;
        }

        .report-container td {
            font-family: 'rotis_semisans_stdregular';
            font-size: 14px !important;
            vertical-align: top;
        }

        .report-container p {
            font-family: 'rotis_semisans_stdregular';
            font-size: 14px;
            vertical-align: top;
        }

        .report-container label {
            font-family: 'rotis_semisans_stdregular';
            font-size: 14px;
            vertical-align: top;
        }

        .report-container b, .report-container strong {
            font-family: 'rotis_semisans_stdextrabold';
            font-weight: 700;
        }

        .pdf_div label {
            font-size: 14px;
        }

        .image_td {
            border: 1px solid black;
            padding: 5px 0px 5px 10px;
            word-wrap: anywhere;
            overflow-wrap: break-word;
            word-break: break-word;
            page-break-inside: avoid;
        }

            .image_td img {
                width: 90%;
            }

            .image_td table td {
                min-width: 100px;
            }

        .page-break {
            page-break-before: always;
        }

        table th {
            word-wrap: anywhere;
        }

        thead.report-header {
            display: table-header-group;
        }

        tfoot.report-footer {
            display: table-footer-group;
        }

        .add-information table {
            width: 100% !important;
            border-collapse: collapse;
            border: 1px solid #000 !important;
        }

        .add-information td {
            border: 1px solid black;
            padding: 5px 10px;
            word-break: break-all;
            page-break-after: auto;
            overflow-wrap: break-word;
            page-break-inside: auto;
        }

        .add-information tr {
            page-break-inside: avoid;
        }

        .pdf-dimensions {
            width: 100%;
            page-break-after: auto;
            overflow-wrap: break-word;
            page-break-inside: auto;
        }

            .pdf-dimensions .report-header table {
                width: 100%;
                border: 1px solid #000;
                border-collapse: collapse;
                page-break-after: auto;
                display: block;
                overflow-wrap: break-word;
            }

            .pdf-dimensions .report-content table {
                width: 100%;
                border: 1px solid #000;
                border-collapse: collapse;
                page-break-after: auto;
                table-layout: fixed;
                display: block;
                overflow-wrap: break-word;
            }

        .report-header .th-header {
            word-wrap: anywhere;
            border: 1px solid black;
            padding: 5px 0px 5px 2px;
            text-align: left;
            page-break-inside: avoid;
            overflow-wrap: break-word;
        }
    </style>
</head>

<body style="width:900px; margin: 0px" class="pdf_div">
    @foreach (var item in Model.FoodSupplementPDFList)
    {
        <table class="report-container pdf-dimensions">

            <thead class="report-header">
                <tr>
                    <th>
                        <table>

                            <tr>
                                <td colspan="8" style="word-wrap: anywhere; border: 1px solid black;padding: 5px 0px 5px 5px;text-align: center; page-break-inside: avoid;overflow-wrap: break-word; position:relative; height:50px">
                                    <img src="https://leap.himalayawellness.com/Logo_Font/img/logohmnew.png" style="height:30px; position:absolute;top:2px; left:2px;" />
                                    <br />
                                    <strong>
                                        RID - Food Supplements
                                    </strong>
                                    <br />
                                </td>
                            </tr>

                            <tr>
                                <th class="th-header">
                                    <label>
                                        <strong>
                                            Region
                                        </strong>
                                    </label>
                                </th>
                                <th style="font-weight:400">
                                    <label>@Html.Raw(item.Region)</label>
                                </th>
                                <th class="th-header">
                                    <label>
                                        <strong>
                                            Ingredient Name
                                        </strong>
                                    </label>
                                </th>
                                <th style="font-weight:400">
                                    <label>@Html.Raw(item.IngredientName)</label>
                                </th>
                            </tr>

                        </table>
                    </th>
                </tr>
            </thead>

            <tbody class="report-content">

                <tr>
                    <td>
                        <h3 style="font-weight:700;font-size:14px"><strong>Compliance Remarks</strong></h3>
                        <table>
                            <tbody>
                                @if (item.RegionGroupData != null)
                                {
                                    foreach (var item2 in item.RegionGroupData)
                                    {
                                        <tr>
                                            <td style="border: 1px solid black;width: 20%;padding: 5px 0px 5px 10px;font-weight: 700;text-align:left">
                                                <strong>@Html.Raw(item2.RegionGroupLabel)</strong>
                                            </td>
                                            <td style="border: 1px solid black;width: 80%;padding: 5px 0px 5px 10px;font-weight: 600">
                                                @Html.Raw(item2.RegionGroupData)
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </td>
                </tr>

                <tr>
                    <td>
                        <h3 style="font-weight:700;font-size:14px"><strong>Additional Information</strong></h3>
                        @if (item.AdditionalInformation != "")
                        {
                            <div class="add-information">
                                <table>
                                    <tbody>
                                        <tr>
                                            <td>
                                                @Html.Raw(item.AdditionalInformation)
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        }
                    </td>
                </tr>

                <tr>
                    <td>
                        <h3 style="font-weight:700;font-size:14px"><strong>@Html.Raw(item.RegionRecommendation)</strong></h3>
                        <table>
                            <tbody>
                                <tr>
                                    <td class="image_td">
                                        <span style="word-wrap: anywhere;overflow-wrap: break-word; page-break-inside: avoid;font-weight: 700;padding: 5px 5px 5px 5px;font-size: 16px"><b>In Medicine</b></span> <br />
                                        @Html.Raw(item.InMedicine)
                                    </td>
                                </tr>
                                <tr>
                                    <td class="image_td">
                                        <span style="word-wrap: anywhere;overflow-wrap: break-word; page-break-inside: avoid;font-weight: 700;padding: 5px 5px 5px 5px;font-size: 16px"><b>In FoodSupplement</b></span> <br />
                                        @Html.Raw(item.InFoodSupplement)
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>

            </tbody>

            <tfoot class="report-footer">
                <tr>
                    <td class="report-footer-cell">
                        <div class="footer-info">
                        </div>
                    </td>
                </tr>
            </tfoot>

        </table>
    }
</body>

</html>