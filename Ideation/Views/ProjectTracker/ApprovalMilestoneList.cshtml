@{
    ViewData["Title"] = "Approval Milestones";
    Layout = "/Views/Shared/ProjectTrackerLayout.cshtml";

    var selectedStatus = Context.Session.GetString("SelectedStatus");
}

<script src="@Url.Content("~/assets_EPPM/js/jquery-ui.js")"></script>
<input type="hidden" value="@selectedStatus" id="selectedStatus" />

<section>
    <div class="">
        <div id="message" class="m-login__erromsg">
            @if (TempData["Message"] != null)
            {
                <div class="alert @Convert.ToString(TempData["MessageClass"]) alert-dismissible" role="alert" id="message_alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true" class="l_err_msg_close">&times;</span>
                    </button>
                    @Convert.ToString(TempData["Message"])
                </div>
            }
        </div>
    </div>
</section>

<section>
    <div class="">
        <div class="-m_title_ ">
            <h4><span><a href="@Url.Content("~/Landing/Index")">Home/ </a></span><span>Milestone/ </span> Approval Milestone</h4>
        </div>
    </div>
</section>

<section>
    <div class="filter_status prototype_filter  d-flex justify-content-between">
        <div class="d-flex">
            <div class="col-width1">
                <div class="form-group  ">
                    <label class="control-label ">Status</label>
                    <select class="form-control form-select" data-singleselect id="StatuList">
                    </select>
                </div>
            </div>
            <div class="col-width1 mt-3">
                <button class="btn btn-search" title="search" type="button" id="searchstatus">
                    <i class="fas fa-search"></i>
                </button>
                @*<button class="btn btn-refresh" title="refresh" id="btn_refresh" type="button">
                    <i class="fas fa-sync-alt"></i>
                </button>*@
            </div>
        </div>
        <div class="d-flex justify-content-end align-items-center">
            <div class="d-flex excel_expand align-items-center">
                <div>
                    <div class="expand_initiate table_expand">
                        <div>
                            <button onclick="$(document).toggleFullScreen()" class="js-toggle-fullscreen-btn toggle-fullscreen-btn">
                                <i class="fas fa-expand fullscreen_expand fullscreen-btn" title="Enter FullScreen Mode"></i>
                                <i class="fas fa-times fullscreen_minimize exitscreen-btn" title="Exit FullScreen Mode"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="row">
        <div class="col-md-12">
            <div class="m-table__main">
                <div class="m-table__responsive -virtual-scroll">
                    <table id="jqgrid" class="table table-bordered"></table>
                    <div id="pager"></div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/js/ProjectTracker/ApprovalMilestoneList.js"></script>