@model Ideation.Models.MyMilestone
@{
    ViewData["Title"] = "My Milestones";
    Layout = "/Views/Shared/ProjectTrackerLayout.cshtml";
}
<script src="@Url.Content("~/assets_EPPM/js/jquery-ui.js")"></script>
<section>
    <div class="">
        <div class="-m_title_ ">
            <h4><span><a href="@Url.Content("~/Landing/Index")">Home/ </a></span> <span>Milestone/ </span> My Milestone</h4>
        </div>
    </div>
</section>

<section>
    <div class="filter_status prototype_filter  d-flex justify-content-between">
        <div class="d-flex">
            <div class="col-width2 mr-3">
                <div class="form-group  ">
                    <label class="control-label">Status</label>
                    <select class="form-control form-select" data-singleselect id="StatuList">
                    </select>
                </div>
            </div>
            <div class="col-width1 mt-3">
                <button class="btn btn-search mr-1" title="search" type="button" id="searchstatus">
                    <i class="fas fa-search"></i>
                </button>
                @*<button class="btn btn-refresh" title="refresh" id="btn_refresh" type="button">
                    <i class="fas fa-sync-alt"></i>
                </button>*@
            </div>
        </div>
        <div class="d-flex justify-content-end align-items-center">
            <div class="d-flex excel_expand align-items-center">
                <div>
                    <div class="expand_initiate table_expand">
                        <div>
                            <button onclick="$(document).toggleFullScreen()" class="js-toggle-fullscreen-btn toggle-fullscreen-btn">
                                <i class="fas fa-expand fullscreen_expand fullscreen-btn" title="Enter FullScreen Mode"></i>
                                <i class="fas fa-times fullscreen_minimize exitscreen-btn" title="Exit FullScreen Mode"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section>

    <div class="animate__animated2 slideInUp mt-1">
        <div class="">
            <div class="">
                <div class="row">
                    <div class="m-table__main grid_height grid_color">
                        <div class="m-table__responsive -virtual-scroll">
                            <table id="jqgrid" class="table table-bordered"></table>
                            <div id="pager"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

<script src="~/js/ProjectTracker/MilestoneList.js"></script>