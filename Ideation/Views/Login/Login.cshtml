        .main {
            display: flex;
            min-height: 100vh;
            background-image: url("N_assets/images/TP/Final_Biz_BCK.png");
            background-size:100% 109%;
            background-repeat:no-repeat;
        }

        .left_side {
            flex: 0 0 60%;
            background: #ff86000f;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        .image-container {
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            /* background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); */
        }

        .left-side-image {
            max-width: 100%;
            max-height: 100%;
            object-fit: cover;
            width: 100%;
            height: 100%;
        }

        .right_side {
            flex: 0 0 40%;
            height: 100vh;
            background: #ff86000f;
            position: relative;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        /* Logo positioned at top right */
        .logo-top-right {
            position: absolute;
            top: 1rem;
            right: 0.3rem;
            width: 25%;
            height: 6%;
            display: flex;
            justify-content:center;
            align-items:center;
            background-color: #383838;
            border-radius:13px;
            z-index: 10;
        }

            .logo-top-right img {
                width: 95%;
                height: auto;
                object-fit: contain;
            }
        .login_page {
            width: 80%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 20px 30px rgba(0, 0, 0, 0.15), 0 10px 10px rgba(0, 0, 0, 0.05);
            transform: translateY(-10px);
            transition: all 0.3s ease-in-out;
            z-index: 10;
        }

            .login_page:hover {
                transform: translateY(-15px);
                box-shadow: 0 30px 40px rgba(0, 0, 0, 0.2), 0 15px 15px rgba(0, 0, 0, 0.1);
            }

        .middle_box {
            width: 100%;
        }

        .title_name {
            text-align: center;
            margin-bottom: 2rem;
        }

        .title_img {
            height: auto;
            width:100%;
            border-top-left-radius:10px;
            border-top-right-radius:10px;
        }

        #loginForm{
            padding:20px;
        }

        .form-control {
            width: 100%;
            padding: 12px 16px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 8px;
            transition: all 0.3s ease;
            background-color: #f9f9f9;
            box-shadow: inset 0 1px 3px rgba(0,0,0,0.05);
            outline: none;
        }

            .form-control:focus {
                border-color: #66bfff;
                background-color: #fff;
                box-shadow: 0 0 0 4px rgba(102, 191, 255, 0.2);
            }

            .form-control::placeholder {
                color: #6c757d;
            }

        .form-group {
            margin-bottom: 20px;
        }
        .position-relative {
            position: relative;
        }

        .toggle-password {
            position: absolute;
            right: 0.75rem;
            top: 35%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #6c757d;
            font-size: 1rem;
            transition: color 0.15s ease-in-out;
            padding: 0.25rem;
        }

            .toggle-password:hover {
                color: #667eea;
            }

        .btn {
            width: 100%;
            padding: 0.7rem 1rem;
            border: none;
            border-radius: 4px;
            font-size: 1rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.15s ease-in-out;
            position: relative;
            margin-top: 0.5rem;
        }

        .signin {
            background: #667eea;
            color: white;
        }

            .signin:hover:not(:disabled) {
                background: #5a67d8;
                transform: translateY(-1px);
            }

            .signin:disabled {
                opacity: 0.6;
                cursor: not-allowed;
            }

        .spinner {
            display: none;
            width: 16px;
            height: 16px;
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            border-top-color: white;
            animation: spin 1s linear infinite;
            margin-right: 0.5rem;
        }

        .btn.loading .spinner {
            display: inline-block;
        }

        .validation_login {
            font-size: 0.85rem;
            margin-top: 0.25rem;
            display: block;
        }

        .text-danger {
            color: #dc3545;
        }

        .alert {
            padding: 0.75rem 1rem;
            margin-top: 1rem;
            border-radius: 4px;
            border: 1px solid transparent;
        }

        .alert-success {
            background-color: #d4edda;
            border-color: #c3e6cb;
            color: #155724;
        }

        .alert-danger {
            background-color: #f8d7da;
            border-color: #f5c6cb;
            color: #721c24;
        }

        .alert-warning {
            background-color: #fff3cd;
            border-color: #ffeaa7;
            color: #856404;
        }

        .alert-info {
            background-color: #d1ecf1;
            border-color: #bee5eb;
            color: #0c5460;
        }

    </style>

</head>
